<h1>Hi there!</h1>
<p>Welcome to {{title}}</p>

<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    <div id="success" class="alert alert-success"
    {{#if noMessages}}hidden{{/if}}>
      {{successMsg}}
    </div>
  </div>
</div>
{{# each products }}

<div class="row">

  {{#each this}}
    <div class="col-sm-4 col-md-4">
      <div class="thumbnail">
        <img src="{{ this.image }}" alt="..." class="img-responsive">
        <div class="caption">
          <h3 class="description">{{ this.title }}</h3>
          <p>{{ this.description }}</p>
          <div class="clearfix">
            <div class="price pull-left">US$ {{ this.price }}</div>
            <a href="/add-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Add to Cart</a>
          </div>
        </div>
      </div>
    </div>

  {{/each}}

</div>

{{/each}}
