<div class="row">
  <div class="col-md-8 col-md-offset-3">
    <h1>Welcome back!</h1>
    <hr>
    <h2>Your orders</h2>

    <!--two loops: one for orders, one for items in orders-->
    {{#each orders}}
      <div class="panel panel-default">
        <div class="panel-body">
          <ul class="list-group">

            {{#each this.items}}
            <li class="list-group-item">
              <!--objects from cart model-->
              <span class="badge">${{this.price}}</span>
              {{this.item.title}} | {{this.qty}} ordered
            </li>
            {{/each}}

          </ul>
        </div>
        <div class="panel-footer">
          <strong>Total Price: ${{this.cart.totalPrice}}</strong>
        </div>
      </div>
    {{/each}}
  </div>
</div>
